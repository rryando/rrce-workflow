{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "anthropic": {
      "options": {
        "setCacheKey": true
      }
    },
    "openai": {
      "options": {
        "setCacheKey": true
      }
    },
    "openrouter": {
      "options": {
        "setCacheKey": true
      }
    },
    "google": {
      "options": {
        "setCacheKey": true
      }
    }
  },
  "agent": {
    "rrce_orchestrator": {
      "description": "RRCE Phase Coordinator - guides workflow with minimal token overhead",
      "mode": "primary",
      "tools": {
        "rrce_search_knowledge": true,
        "rrce_search_code": true,
        "rrce_find_related_files": true,
        "rrce_get_project_context": true,
        "rrce_list_projects": true,
        "rrce_list_agents": true,
        "rrce_get_agent_prompt": true,
        "rrce_list_tasks": true,
        "rrce_get_task": true,
        "rrce_create_task": true,
        "rrce_update_task": true,
        "rrce_delete_task": true,
        "rrce_index_knowledge": true,
        "rrce_resolve_path": true,
        "read": true,
        "glob": true,
        "grep": true,
        "write": true,
        "webfetch": true,
        "task": true,
        "todoread": true,
        "todowrite": true,
        "bash": false,
        "edit": false
      }
    },
    "rrce_executor": {
      "description": "Execute planned tasks - use /rrce_execute (in-context) or @rrce_executor (isolated)",
      "mode": "subagent",
      "tools": {
        "rrce_search_knowledge": true,
        "rrce_search_code": true,
        "rrce_find_related_files": true,
        "rrce_get_project_context": true,
        "rrce_index_knowledge": true,
        "rrce_update_task": true,
        "read": true,
        "glob": true,
        "grep": true,
        "write": true,
        "edit": true,
        "bash": true,
        "todoread": true,
        "todowrite": true,
        "webfetch": true,
        "task": false
      }
    },
    "plan": {
      "disable": true
    }
  }
}
