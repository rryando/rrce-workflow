{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "anthropic": {
      "options": {
        "setCacheKey": true
      }
    },
    "openai": {
      "options": {
        "setCacheKey": true
      }
    },
    "openrouter": {
      "options": {
        "setCacheKey": true
      }
    },
    "google": {
      "options": {
        "setCacheKey": true
      }
    }
  },
  "agent": {
    "rrce_orchestrator": {
      "description": "RRCE Phase Coordinator - guides workflow with minimal token overhead",
      "mode": "primary",
      "tools": {
        "search_knowledge": true,
        "search_code": true,
        "find_related_files": true,
        "get_project_context": true,
        "list_projects": true,
        "list_agents": true,
        "get_agent_prompt": true,
        "list_tasks": true,
        "get_task": true,
        "create_task": true,
        "update_task": true,
        "delete_task": true,
        "index_knowledge": true,
        "resolve_path": true,
        "read": true,
        "write": true,
        "bash": false,
        "edit": false,
        "task": true
      }
    },
    "rrce_executor": {
      "description": "Execute planned tasks - use /rrce_execute (in-context) or @rrce_executor (isolated)",
      "mode": "subagent",
      "tools": {
        "search_knowledge": true,
        "search_code": true,
        "find_related_files": true,
        "get_project_context": true,
        "index_knowledge": true,
        "update_task": true,
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
        "glob": true,
        "grep": true,
        "task": false
      }
    },
    "plan": {
      "disable": true
    }
  }
}
